/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.audio {
  padding-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.position {
  padding: 30px 0 20px;
}

.record {
  padding: 10px;
  border-radius: 4px;
  width: 80vw;
  height: 500rpx;
  overflow-y: auto;
  border: 1px solid #666;
}

.map-box {
  position: relative;
  margin-top: 50px;
  margin-bottom: 30px;
  width: 96vw;
  border: 2px solid red;
}

.map-img {
  position: relative;
  width: 100%;
  height: 100%;
}

.point {
  position: absolute;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: red;
  transform: translateX(-50%) translateY(-50%);
}